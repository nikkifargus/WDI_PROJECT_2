<h1>All recipes</h1>


<% recipes.forEach(recipe => { %>
  <div class="recipe">
  <h2> <%= recipe.name %><h2>


  <div class="indexPhotoFrame z-depth-3">
  <a href="/recipes/<%= recipe._id%>">
  <img src="<%= recipe.image %>">
  <p><%= recipe.createdBy.username %></p>
  </div>

  <a class = "btn btn-secondary" href="/recipes/<%= recipe._id%>">View Recipe</a>
  </div>


<%}); %>
