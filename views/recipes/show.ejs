<div class="row">

  <div class="showImage col s12 m12 l5">
    <img class="z-depth-3" src="<%= recipe.image %>">
  </div>

  <div class="col s12 m12 l7">
    <h2><%= recipe.name %></h2>
    <br>
    <h5>Created by: <%= recipe.createdBy.username %></h5>
    <h5><%= recipe.description%></h5>
  </div>

</div>

<div class="row">
  <div class="col s12 m5 l5">

    <h4>Ingredients</h4>
    <ul>
      <li><%= recipe.ingredient1%></li>
      <li><%= recipe.ingredient2%></li>
      <li><%= recipe.ingredient3%></li>
    </ul>
  </div>
  <div class="col s7 m7 l7">


    <h4>Method</h4>
    <ul>
      <li><%= recipe.step1%></li>
      <li><%= recipe.step2%></li>
      <li><%= recipe.step3%></li>
    </ul>
  </div>
</div>
<a href="/recipes/<%= recipe.id %>/edit" class="btn btn-primary">Edit</a>

<form method="POST" action="/recipes/<%= recipe.id %>">
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-danger">Delete</button>
</form>
